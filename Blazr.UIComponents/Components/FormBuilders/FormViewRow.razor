@namespace Blazr.UIComponents

<UIFormRow>
    <UILabelColumn LargeColumns=this.LabelLargeColumns MediumColumns=this.LabelMediumColumns Columns=12>
        @Title
    </UILabelColumn>
    <UIInputColumn LargeColumns=this.ControlLargeColumns MediumColumns=this.ControlMediumColumns Columns=12>
        @if (this.ChildContent != null)
        {
            @ChildContent }
        else
        {
            <InputReadOnlyText Value="@this.Value" />}
    </UIInputColumn>
</UIFormRow>
