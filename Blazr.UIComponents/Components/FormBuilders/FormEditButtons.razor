@namespace Blazr.UIComponents

<UIContainer Size="this.ContainerSize">
    <UIFormRow>
        <UIColumn XLargeColumns=this.AlertColumns Columns=12>
            <UIAlert AlertData="this.AlertData"></UIAlert>
        </UIColumn>
        <UIButtonColumn XLargeColumns=this.ButtonColumns Columns=12>
            @ChildContent
        </UIButtonColumn>
    </UIFormRow>
</UIContainer>
