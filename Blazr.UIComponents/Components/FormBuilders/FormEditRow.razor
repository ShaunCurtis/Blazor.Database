@namespace Blazr.UIComponents

<UIFormRow>
    @if (this.LabelColumns > 0)
    {
<UILabelColumn Cols="@this.LabelColumns">
    @Title
</UILabelColumn>}
    <UIInputColumn Cols="@this.ControlColumns">
        @ChildContent
    </UIInputColumn>
    @if (this.ValidationContent != null)
    {
<UIValidationColumn Cols="@this.ValidationColumns">
    @ValidationContent
</UIValidationColumn>}
    @if (this.paddingColumns > 0)
    {
<UIColumn Cols="@this.paddingColumns"></UIColumn>}
</UIFormRow>
