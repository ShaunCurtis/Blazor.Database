<Router AppAssembly="@typeof(ServerApp).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(ServerLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(ServerLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
