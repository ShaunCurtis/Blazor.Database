@namespace Blazr.Database.Components
    <CascadingAuthenticationState>

        <Router AppAssembly="@typeof(WeatherApp).Assembly" PreferExactMatches="@true">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
@*                <AuthorizeRouteViewManager RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
*@            </Found>
            <NotFound>
                <RouteNotFoundManager DefaultLayout="@typeof(MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </RouteNotFoundManager>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
