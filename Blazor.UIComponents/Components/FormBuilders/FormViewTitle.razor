@namespace Blazor.UIComponents

<UIContainer>
    <UIFormRow>
        <UIColumn Columns=12>
            @if (this.ChildContent != null)
            {
                <h2>@ChildContent</h2> }
            else
            {
                <h2>@this.Title</h2>}
        </UIColumn>
    </UIFormRow>
</UIContainer>
